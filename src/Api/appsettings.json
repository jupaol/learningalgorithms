{
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PortfolioEngine": "Data Source={{{SqlServer}}}; Database=PortfolioEngine; Integrated Security=false; User id={{{SqlUserId}}}; Password={{{SqlUserPassword}}}"
  },
  "ServiceSettings": {
  },
  "NLog": {
    "throwConfigExceptions": true,
    "variables": {
      "commonLayout": "${date:format=yyyy-MM-dd HH\\:mm\\:ss.fff} ${machinename} ${level:uppercase=true} ${message} ${when:when=level == LogLevel.Error:inner=${newline}}${onexception:EXCEPTION OCCURRED\\:${exception:format=tostring}}",
      "logDir": "{{{LogsBaseDirectory}}}\\{{{AppName}}}",
      "customFileName": "${level}"
    },
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "${logDir}/${customFileName}.log",
        "layout": "${commonLayout}",
        "archiveFileName": "${logDir}/${customFileName}.${shortdate}.{#####}.log",
        "archiveAboveSize": "10485760",
        "archiveNumbering": "Sequence",
        "concurrentWrites": "true"
      },
      "logconsole": {
        "type": "Console",
        "layout": "${commonLayout}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "{{{LogMinLevel}}}",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "{{{LogMinLevel}}}",
        "writeTo": "logfile"
      }
    ]
  }
}
